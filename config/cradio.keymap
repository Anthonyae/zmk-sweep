                &kp N0   	&kp N1   	&kp N2   	&kp N3   	&kp N0   	         	&kp N0   	&kp N1   	&kp N2   	&kp N3   	&kp N0   
                                                                &trans   	&trans   	         	&trans   	&kp N0   	         	         	         
                >; };		                        	                        	                        	                        	                        	                        	                        	                        	                        
                nav_layer {										
                        bindings = <									
                &macro_all  	&macro_find 	&macro_redo 	&macro_undo 	&kp INS     	            	&kp CAPS    	&kp HOME    	&kp UP      	&kp END     	&kp LBRC    
