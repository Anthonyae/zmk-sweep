                &trans                         	&trans                         	&mwh SCROLL_UP_MEDIUM          	&mwh SCROLL_DOWN_MEDIUM        	&trans                         	                               	&mo MOUSE_DEAD                 	&mo MOUSE_CRAWL                	&mo MOUSE_SLOW                 	&mo MOUSE_MEDIUM               	&mo MOUSE_FAST                 
                                                                                                                &trans                         	&trans                         	                               	&trans                         	&trans                         	                               	                               	                               
                >; };										
                mouse_slow_layer {										
                        bindings = <									
                &mkp MCLK                         	&mkp RCLK                         	&mmv MOVE_UP_SLOW                 	&mkp LCLK                         	&kp K_CMENU                       	                                  	&kp K_CMENU                       	&mkp LCLK                         	&mkp MCLK                         	&mkp RCLK                         	&mkp MCLK                         
