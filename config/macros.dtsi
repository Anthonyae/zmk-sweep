

// General purpose 

    arrow_single: arrow_single {
        label = "ZMK_arrow_single";
        compatible = "zmk,behavior-macro";
        #binding-cells = <0>;
        wait-ms = <0>;
        tap-ms = <40>;
        bindings = 
            <&macro_tap &kp minus &kp GREATER_THAN >
            ;
    };

